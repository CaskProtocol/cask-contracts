{
  "name": "cask-contracts",
  "version": "1.0.0",
  "description": "Cask Protocol Smart Contracts",
  "main": "index.js",
  "engines": {
    "node": ">=17",
    "npm": "please-use-yarn",
    "yarn": ">= 1.22"
  },
  "scripts": {
    "hardhat": "NODE_OPTIONS=--openssl-legacy-provider npx hardhat",
    "local": "NODE_OPTIONS=--openssl-legacy-provider npx hardhat --network localhost",
    "export": "NODE_OPTIONS=--openssl-legacy-provider npx hardhat deploy --export '../p-cask-frontend/src/abi/network.json'",
    "test": "NODE_OPTIONS=--openssl-legacy-provider IS_TEST=true npx hardhat test",
    "clean": "rm -rf artifacts cache deployments/local*"
  },
  "mocha": {
    "require": "hardhat/register",
    "timeout": 20000
  },
  "author": "Subverse Labs, LLC <info@subverselabs.com>",
  "license": "MIT",
  "homepage": "https://www.cask.fi",
  "devDependencies": {
    "@chainlink/contracts": "^0.2.2",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.11",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^4.4.0",
    "@openzeppelin/contracts-upgradeable": "^4.4.0",
    "@openzeppelin/hardhat-upgrades": "^1.12.0",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.2",
    "hardhat": "^2.7.0",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-deploy": "^0.9.14",
    "hardhat-deploy-ethers": "^0.3.0-beta.11",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.2.27"
  },
  "dependencies": {
    "@caskprotocol/sdk": "link:../p-cask-web-sdk",
    "dotenv": "^10.0.0",
    "yarn": "^1.22.17"
  }
}
